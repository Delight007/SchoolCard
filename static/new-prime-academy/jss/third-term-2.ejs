<html lang="en">
  <head>
    <title><%= data.student.name %> Report Card</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <style>
      @page {
        size: A4;
        /*margin: 30mm 45mm 30mm 45mm;*/
      }

      td,
      th {
        border: 2px solid rgb(40, 126, 65);
      }

      body {
        margin: 0;
        font-family: 'Roboto', sans-serif;
        color: rgb(40, 126, 65);
      }

      .report-card {
        /*border: 2px solid rgb(165, 117, 48);*/
      }

      table {
        width: 100%;
        border-collapse: collapse;
        table-layout: fixed;
      }

      th,
      td {
        padding: 4px;
        font-size: 0.9em;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="report-card">
        <div style="display: flex; justify-content: space-between; gap: 20px">
          <img
            src="<%= data.school.logo %>"
            alt="Logo"
            height="200"
            width="200"
            style="object-fit: contain"
          />
          <div style="display: flex; align-items: center; flex-direction: column">
            <h1 style="color: rgb(40, 126, 65); font-size: 28px; margin: 0">
              <%= data.school.name?.toUpperCase() %>
            </h1>
            <h3 style="font-size: 20px; color: rgb(51, 71, 75); margin: 0">
              (NURSERY/PRIMARY/SECONDARY)
            </h3>
            <h4 style="margin: 0; font-size: 18px; color: rgb(51, 71, 75); font-weight: 400">
              <%= data.school.address %>
            </h4>
            <div style="margin-bottom: 16px"></div>
            <h5 style="margin: 0; color: rgb(164, 59, 79); font-size: 30px; font-weight: 400">
              <%= data.school.motto %>
            </h5>
            <h5 style="margin: 0; font-size: 10px; color: rgb(51, 71, 75)">
              Tel: 09133035479, 08054336567
            </h5>
            <h2 style="font-size: 14px; margin: 0">ANNUAL EXAMINATION REPORT SHEET</h2>
            <div style="margin-top: 14px"></div>
            <h3 style="margin: 0; font-size: 18px; color: rgb(51, 71, 75)">(JSS SECTION)</h3>
          </div>
          <div style="border: 1px solid #000; width: 200px">
            <img src="<%= data.student.passport %>" alt="Passport" height="200" width="200" />
          </div>
        </div>
        <div style="margin-top: 24px; display: flex; flex-direction: column; gap: 20px">
          <div style="display: flex; gap: 20px">
            <div style="display: flex; align-items: flex-end; width: 60%; gap: 4px">
              <p style="margin: 0; font-size: 14px; line-height: 14px; font-weight: 400">
                STUDENT NAME:
              </p>
              <div
                class="student-name"
                style="
                  flex: 1;
                  border-bottom: 1px solid rgb(40, 126, 65);
                  font-size: 16px;
                  font-weight: 400;
                  padding-left: 5px;
                "
              >
                <%= data.student.name %>
              </div>
            </div>
            <div style="display: flex; align-items: flex-end; gap: 4px; width: 20%">
              <p style="margin: 0; font-size: 14px; line-height: 14px; font-weight: 400">GENDER:</p>
              <div
                style="
                  flex: 1;
                  border-bottom: 1px solid rgb(40, 126, 65);
                  font-size: 16px;
                  font-weight: 400;
                "
              >
                <%= data.student.gender %>
              </div>
            </div>
            <div style="display: flex; align-items: flex-end; gap: 4px; width: 20%">
              <p style="margin: 0; font-size: 14px; line-height: 14px; font-weight: 400">
                NO. IN CLASS:
              </p>
              <div
                style="
                  flex: 1;
                  border-bottom: 1px solid rgb(40, 126, 65);
                  font-size: 16px;
                  font-weight: 400;
                "
              >
                <%= data.numberInClass %>
              </div>
            </div>
          </div>
          <div style="display: flex; gap: 20px">
            <div style="display: flex; align-items: flex-end; gap: 4px; width: 40%">
              <p style="margin: 0; font-size: 14px; line-height: 14px; font-weight: 400">
                STUDENT CLASS:
              </p>
              <div
                style="
                  flex: 1;
                  border-bottom: 1px solid rgb(40, 126, 65);
                  font-size: 16px;
                  font-weight: 400;
                "
              >
                <%= data.className %>
              </div>
            </div>
            <div style="display: flex; align-items: flex-end; gap: 4px; width: 30%">
              <p style="margin: 0; font-size: 14px; line-height: 14px; font-weight: 400">TERM:</p>
              <div
                style="
                  flex: 1;
                  border-bottom: 1px solid rgb(40, 126, 65);
                  font-size: 16px;
                  font-weight: 400;
                "
              >
                <%= data.termName %>
              </div>
            </div>
            <div style="display: flex; align-items: flex-end; gap: 4px; width: 30%">
              <p style="margin: 0; font-size: 14px; line-height: 14px; font-weight: 400">
                SESSION:
              </p>
              <div
                style="
                  flex: 1;
                  border-bottom: 1px solid rgb(40, 126, 65);
                  font-size: 16px;
                  font-weight: 400;
                "
              >
                <%= data.sessionName %>
              </div>
            </div>
          </div>
          <div style="display: flex; gap: 20px">
            <div style="display: flex; align-items: flex-end; gap: 4px; width: 40%">
              <p style="margin: 0; font-size: 14px; line-height: 14px; font-weight: 400">
                NO OF DAYS SCHOOL OPENED:
              </p>
              <div style="flex: 1; font-size: 14px; border-bottom: 1px solid rgb(40, 126, 65)">
                <%= data.numberOfDaysOpened %>
              </div>
            </div>
            <div style="display: flex; align-items: flex-end; gap: 4px; width: 30%">
              <p style="margin: 0; font-size: 16px; font-weight: 400">NO OF DAYS PRESENT:</p>
              <div
                style="
                  flex: 1;
                  font-size: 16px;
                  font-weight: 400;
                  border-bottom: 1px solid rgb(40, 126, 65);
                "
              >
                <%= data.presentCount %>
              </div>
            </div>
            <div style="display: flex; align-items: flex-end; gap: 4px; width: 30%">
              <p style="margin: 0; font-size: 14px; line-height: 14px; font-weight: 400">
                NO OF DAYS OUT OF SCHOOL:
              </p>
              <div
                style="
                  flex: 1;
                  font-size: 16px;
                  font-weight: 400;
                  border-bottom: 1px solid rgb(40, 126, 65);
                "
              >
                <%= data.numberOfDaysOpened - data.presentCount %>
              </div>
            </div>
          </div>
        </div>
        <div style="margin-top: 20px">
          <table
            style="
              border: 1px solid rgb(40, 126, 65);
              width: 100%;
              table-layout: fixed;
              border-collapse: collapse;
            "
          >
            <thead>
              <tr>
                <th rowspan="2" style="width: 20%; font-size: 12px; padding: 10px">SUBJECTS</th>
                <th colspan="4" style="font-size: 12px">THIRD TERM</th>
                <th rowspan="2" style="font-size: 12px">SECOND TERM B/F 100%</th>
                <th rowspan="2" style="font-size: 12px">FIRST TERM B/F 100%</th>
                <th rowspan="2" style="font-size: 12px">TOTAL</th>
                <th rowspan="2" style="font-size: 12px">AVERAGE SCORE</th>
                <th rowspan="2" style="font-size: 12px">GRADE</th>
                <th rowspan="2" style="font-size: 12px">COMMENT</th>
                <th rowspan="2" style="font-size: 12px">SIGN</th>
              </tr>
              <tr>
                <th scope="col" style="font-size: 12px">CA 1 20%</th>
                <th scope="col" style="font-size: 12px">CA 2 20%</th>
                <th scope="col" style="font-size: 12px">EXAM</th>
                <th scope="col" style="font-size: 12px">TOTAL</th>
              </tr>
            </thead>
            <tbody>
              <% data.subjects.forEach(function({
                                                      subjectName,
                                                      subjectId,
                                                      id1,
                                                      id2,
                                                      exam,
                                                      total,
                                                      averageScore,
                                                      grade,
                                                      comment,
                                                      sign,
                                                      assessments
                                                  }) { %>
              <% const subject = data.annualRecord.subjects.find(subj => subj.subjectId ===
              subjectId); %>
              <tr>
                <td style="font-size: 14px; padding: 10px"><%= subjectName %></td>
                <td style="font-size: 14px; padding-left: 5px">
                  <%= assessments ? assessments[0] : '' %>
                </td>
                <td style="font-size: 14px; padding-left: 5px">
                  <%= assessments ? assessments[1] : '' %>
                </td>
                <td style="font-size: 14px; padding-left: 5px">
                  <%= assessments ? assessments[2] : '' %>
                </td>
                <td style="font-size: 14px; padding-left: 5px"><%= total %></td>
                <td style="font-size: 14px; padding-left: 5px">
                  <%= subject ? subject.secondTermTotal : '' %>
                </td>
                <td style="font-size: 14px; padding-left: 5px">
                  <%= subject ? subject.firstTermTotal : '' %>
                </td>
                <td style="font-size: 14px; padding-left: 5px">
                  <%= subject ? subject.overAllTotal : '' %>
                </td>
                <td style="font-size: 14px; padding-left: 5px">
                  <%= subject ? subject.overAllAverage : '' %>
                </td>
                <td style="font-size: 14px; padding-left: 5px">
                  <%= subject ? subject.overAllGrade?.label : "" %>
                </td>
                <td style="font-size: 14px; padding-left: 5px">
                  <%= subject ? subject.overAllGrade?.description : "" %>
                </td>
                <td style="font-size: 14px; padding-left: 5px"><%= sign %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <div style="margin-top: 20px; display: flex; gap: 20px">
          <div style="width: 100%">
            <p style="text-align: center; font-size: 14px; font-weight: 700">PRACTICAL SKILLS</p>
            <table
              style="
                border: 2px solid rgb(40, 126, 65);
                width: 100%;
                table-layout: fixed;
                border-collapse: collapse;
              "
            >
              <thead>
                <tr>
                  <th
                    style="
                      width: 60%;
                      font-size: 12px;
                      font-weight: 700;
                      border: 2px solid rgb(40, 126, 65);
                      padding: 10px;
                    "
                  >
                    NAME
                  </th>
                  <th
                    style="
                      width: 40%;
                      font-size: 12px;
                      font-weight: 700;
                      border: 2px solid rgb(40, 126, 65);
                      padding-left: 5px;
                    "
                  >
                    Grade
                  </th>
                </tr>
              </thead>
              <tbody>
                <% data.practical_skills.forEach(function(skill) { %>
                <tr>
                  <td style="font-size: 12px; border: 2px solid rgb(40, 126, 65); padding: 10px">
                    <%= skill.name %>
                  </td>
                  <td
                    style="font-size: 12px; border: 2px solid rgb(40, 126, 65); padding-left: 5px"
                  >
                    <%= skill.value %>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <div style="width: 100%">
            <p style="text-align: center; font-size: 14px; font-weight: 700">
              CHARACTER DEVELOPMENT
            </p>

            <table
              style="
                border: 2px solid rgb(40, 126, 65);
                width: 100%;
                table-layout: fixed;
                border-collapse: collapse;
              "
            >
              <thead>
                <tr>
                  <th
                    style="
                      width: 60%;
                      font-size: 12px;
                      font-weight: 700;
                      border: 2px solid rgb(40, 126, 65);
                      padding: 10px;
                    "
                  >
                    NAME
                  </th>
                  <th
                    style="
                      width: 40%;
                      font-size: 12px;
                      font-weight: 700;
                      border: 2px solid rgb(40, 126, 65);
                      padding-left: 5px;
                    "
                  >
                    Grade
                  </th>
                </tr>
              </thead>
              <tbody>
                <% data.character_development.forEach(function(character) { %>
                <tr>
                  <td style="font-size: 12px; border: 2px solid rgb(40, 126, 65); padding: 10px">
                    <%= character.name %>
                  </td>
                  <td
                    style="font-size: 12px; border: 2px solid rgb(40, 126, 65); padding-left: 5px"
                  >
                    <%= character.value %>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <div style="width: 100%">
            <p style="text-align: center; font-size: 14px; font-weight: 700">
              INTERPRETATION OF GRADE
            </p>

            <table
              style="
                border: 2px solid rgb(40, 126, 65);
                width: 100%;
                table-layout: fixed;
                border-collapse: collapse;
              "
            >
              <thead>
                <tr>
                  <th
                    style="
                      width: 50%;
                      font-size: 12px;
                      font-weight: 700;
                      border: 2px solid rgb(40, 126, 65);
                      padding: 10px;
                    "
                  >
                    NAME
                  </th>
                  <th
                    style="
                      width: 50%;
                      font-size: 12px;
                      font-weight: 700;
                      border: 2px solid rgb(40, 126, 65);
                      padding-left: 5px;
                    "
                  >
                    Grade
                  </th>
                </tr>
              </thead>
              <tbody>
                <% data.grades.forEach(function(grade) { %>
                <tr>
                  <td style="font-size: 12px; border: 2px solid rgb(40, 126, 65); padding: 10px">
                    <%= Number(grade.min) %> - <%= Number(grade.max) %>
                  </td>
                  <td
                    style="font-size: 12px; border: 2px solid rgb(40, 126, 65); padding-left: 10px"
                  >
                    <%= grade.label %>
                    =
                    <%= grade.description %>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>

        <div style="margin-top: 40px">
          <div style="display: flex; gap: 20px">
            <div style="flex: 1; display: flex; align-items: flex-end; gap: 4px">
              <p style="margin: 0; font-size: 16px; font-weight: 400">MARK OBTAINABLE:</p>
              <div
                style="
                  flex: 1;
                  border-bottom: 1px solid rgb(40, 126, 65);
                  font-size: 16px;
                  font-weight: 400;
                "
              >
                <%= data.annualRecord.annualMarkObtainable ? data.annualRecord.annualMarkObtainable : '' %>
              </div>
            </div>
            <div style="flex: 1; display: flex; align-items: flex-end; gap: 4px">
              <p style="margin: 0; font-size: 16px; font-weight: 400">MARKS OBTAINED:</p>
              <div
                style="
                  flex: 1;
                  border-bottom: 1px solid rgb(40, 126, 65);
                  font-size: 16px;
                  font-weight: 400;
                "
              >
                <%= data.annualRecord.annualMarkObtained ? data.annualRecord.annualMarkObtained : '' %>
              </div>
            </div>
            <div style="flex: 1; display: flex; align-items: flex-end; gap: 4px">
              <p style="margin: 0; font-size: 16px; font-weight: 400">AVERAGE SCORE:</p>
              <div
                style="
                  flex: 1;
                  border-bottom: 1px solid rgb(40, 126, 65);
                  font-size: 16px;
                  font-weight: 400;
                "
              >
                <%= data.annualRecord.annualAverageScore || "0" %>
              </div>
            </div>
            <div style="flex: 1; display: flex; align-items: flex-end; gap: 4px">
              <p style="margin: 0; font-size: 16px; font-weight: 400">GRADE:</p>
              <div
                style="
                  flex: 1;
                  border-bottom: 1px solid rgb(40, 126, 65);
                  font-size: 16px;
                  font-weight: 400;
                "
              >
                <%= data.annualRecord.annualGrade?.label || "" %>
              </div>
            </div>
          </div>

          <div style="display: flex; align-items: flex-end; gap: 4px; margin-top: 20px">
            <p style="margin: 0; font-size: 16px; font-weight: 400">NEXT TERM BEGINS:</p>
            <div
              style="
                flex: 1;
                border-bottom: 1px solid rgb(40, 126, 65);
                font-size: 16px;
                font-weight: 400;
              "
            >
              <%= data.nextTermBegin %>
            </div>
          </div>

          <div
            style="
              display: flex;
              align-items: flex-end;
              gap: 4px;
              margin-top: 20px;
              font-size: 16px;
            "
          >
            <p style="margin: 0; font-weight: 400">CLASS TEACHER'S REMARK:</p>
            <div style="border-bottom: 1px solid rgb(40, 126, 65); flex: 1">
              <%= data.classTeacherRemark %>
            </div>
          </div>
          <div
            style="
              display: flex;
              font-size: 16px;
              align-items: flex-end;
              gap: 4px;
              margin-top: 20px;
            "
          >
            <p style="margin: 0; font-weight: 400">PRINCIPAL'S REMARK:</p>
            <div style="border-bottom: 1px solid rgb(40, 126, 65); flex: 1">
              <%= data.principalRemark %>
            </div>
          </div>
          <div
            style="
              display: flex;
              font-size: 16px;
              align-items: center;
              gap: 20px;
              margin-top: 20px;
              justify-content: space-between;
            "
          >
            <div style="flex: 1; display: flex; font-size: 16px; gap: 4px">
              <p style="margin: 0; font-weight: 400">PROMOTED TO:</p>
              <div style="border-bottom: 1px solid rgb(40, 126, 65); flex: 1">
                <%= data.promoted ? data.nextClassName : '' %>
              </div>
            </div>
            <div style="flex: 1; display: flex; font-size: 16px; gap: 4px">
              <p style="margin: 0; font-weight: 400">TO REPEAT:</p>
              <div style="border-bottom: 1px solid rgb(40, 126, 65); flex: 1">
                <%= data.promoted ? '' : data.className %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
